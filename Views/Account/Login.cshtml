@model Whitees.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<br>
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </div>
            }
            <div class="card-group mb-0">
                <form method="post" asp-action="Login" class="card p-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <h1>Login</h1>
                        <p class="text-muted">Sign In to your account</p>
                        <div class="input-group mb-3">
                            <span class="input-group-addon"></span>
                            <input type="text" asp-for="EmailAddress" class="form-control" placeholder="Email">
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-addon"></span>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="row">
                            <div class="col-6">

                                <input class="btn btn-outline-success float right" type="submit" value="Login" />
                            </div>

                        </div>
                    </div>
                </form>
                <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                    <div class="card-body text-center">
                        <div>
                            <h2>Sign up</h2>
                            <p>Shop your favorite Whitees, High quality shirts you don't miss to wear!</p>
                            <a type="button" class="btn btn-primary active mt-3" asp-area="" asp-controller="Account"
                                asp-action="Register">Register Now!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<br>